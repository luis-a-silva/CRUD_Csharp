@{ 
    var veiculo = ViewBag.veiculo;
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>


<form action="/veiculos/excluir" method="post">
    <div>
        <input type="hidden" id="id" name="id"  value="@veiculo.Id" />

        <label for="nome">Marca:</label>
        <input type="text" id="nome" name="nome" disabled value="@veiculo.Nome"/>
    </div>
    <div>
        <label for="modelo">Modelo:</label>
        <input type="text" id="modelo" name="modelo"  disabled value="@veiculo.Modelo"/>
    </div>
    <div>
        <label for="fabricacao">Fabricação:</label>
        <input type="text" id="fabricacao" name="fabricacao" disabled value="@veiculo.Fabricacao"/>

    </div>
    <div>
        <label for="cor">Cor:</label>
        <input type="text" id="cor" name="cor" disabled value="@veiculo.Cor"/>
    </div>
    <div>
        <label for="combustivel">Combustivel:</label>
        <input type="text" id="combustivel" name="combustivel" disabled  value="@veiculo.Combustivel"/>
    </div>
    <div>
        <label for="automatico">Automático:</label>
        <input type="text" id="automatico" disabled name="automatico"/>
    </div>
    <div>
        <label for="valor">Valor:</label>
        <input type="text" id="valor" name="valor" disabled value="@veiculo.Valor"/>
    </div>
    <br />
    <div class="button">
        <button type="submit">Excluir</button>
    </div>

</form>
